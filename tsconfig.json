{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ],
  "include": [
    "app/**/*",
    "src/**/*",
    "hooks/**/*",
    "components/**/*",
    "constants/**/*",
    "expo-env.d.ts",
    ".expo/types/**/*.ts"
  ]
}
